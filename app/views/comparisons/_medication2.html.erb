
<p style="font-size:14px;">Equivalent medication in <%= ISO3166::Country[@medication2.country]%></p>
  <div class="medium-card-country-info">
    <%= cl_image_tag (@medication2.photo), width:250 %>
    <div class=medium-card-description>
      <p>name: <%= @medication2.english_name %></p>
      <p>category: <%= @medication2.local_category %></p>
        <% @medication2.ingredients.each do |ingredient| %>
          <p>active ingredient: <%= ingredient.name %></p>
        <% end %>
     <%= link_to medication_favorites_path(@medication2), method: "post",class: "mf-button-favorite" do %>
        <i class="far fa-heart"></i>
      <% end %>
    </div>
  </div>

<%= link_to "Search for nearest pharmacy", map_path %>

